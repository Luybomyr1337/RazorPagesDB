@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="row">
    <div class="col">
        <h1>Your personal gradebook</h1>
    </div>
</div>
<div class="row">
    <div class="col">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Zkratka</th>
                    <th>Předmět</th>
                    <th>Známka</th>
                    <th>Váha</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.Grades)
                {
                    <tr>
                        <td>@i.Acronym</td>
                        <td>@i.Subject</td>
                        <td>@i.ValWithMinus</td>
                        <td>@i.WeightAlpha</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
